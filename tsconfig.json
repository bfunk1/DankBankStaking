{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es5", "es6"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "dist",
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "exclude": ["artifacts", "node_modules"],
    "include": [
        "artifacts/**/*",
        "artifacts/**/*.json",
        "scripts/**/*",
        "tasks/**/*",
        "test/**/*",
        "typechain/**/*",
        "types/**/*",
        "src/**/*",
        "hardhat.config.ts"
    ]
}
